<body>
  <%- include('partials/header') %>
  <!-- Add Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
      /* Previous styles remain unchanged */
      * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
          font-family: 'Poppins', sans-serif;
          transition: all 0.3s ease;
      }

      :root {
          --primary-color: #2A2A2A;
          --secondary-color: #D4AF37;
          --accent-color: #4169E1;
          --text-color: #FFFFFF;
          --bg-light: #F8F9FA;
      }

      /* Enhanced Alert Styles */
      .alert {
          padding: 15px;
          margin: 20px auto;
          max-width: 450px;
          border-radius: 8px;
          text-align: center;
      }

      .alert-success {
          background: #d4edda;
          color: #155724;
          border: 1px solid #c3e6cb;
      }

      .alert-danger {
          background: #f8d7da;
          color: #721c24;
          border: 1px solid #f5c6cb;
      }

      /* Enhanced Auth Container */
      .auth-container {
          max-width: 450px;
          margin: 100px auto 2rem;
          padding: 2.5rem;
          background: #fff;
          border-radius: 15px;
          box-shadow: 0 8px 32px rgba(0,0,0,0.1);
          position: relative;
          overflow: hidden;
      }

      .auth-container:before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 4px;
          background: var(--secondary-color);
      }

      /* Enhanced Form Elements */
      .input-group {
          position: relative;
          margin-bottom: 1.5rem;
      }

      .input-icon {
          position: absolute;
          left: 15px;
          top: 50%;
          transform: translateY(-50%);
          color: var(--primary-color);
          opacity: 0.6;
      }

      .auth-form input {
          width: 100%;
          padding: 1rem 1rem 1rem 3rem;
          border: 2px solid #e0e0e0;
          border-radius: 8px;
          font-size: 1rem;
          transition: all 0.3s ease;
      }

      .auth-form input:focus {
          border-color: var(--secondary-color);
          box-shadow: 0 0 12px rgba(212, 175, 55, 0.2);
      }

      /* Enhanced Toggle Password */
      .toggle-password {
          position: absolute;
          right: 15px;
          top: 50%;
          transform: translateY(-50%);
          cursor: pointer;
          color: var(--primary-color);
          opacity: 0.6;
      }

      .toggle-password:hover {
          opacity: 1;
      }

      /* Enhanced Social Login */
      .social-login {
          margin: 2rem 0;
          border-top: 1px solid #eee;
          padding-top: 2rem;
      }

      .btn-google, .btn-facebook {
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 10px;
          padding: 12px;
          margin: 10px 0;
          border-radius: 8px;
          color: white;
          text-decoration: none;
          transition: transform 0.2s ease;
      }

      .btn-google:hover, .btn-facebook:hover {
          transform: translateY(-2px);
      }

      .btn-google { 
          background: #db4437;
          border: 2px solid #c23321;
      }

      .btn-facebook { 
          background: #3b5998;
          border: 2px solid #2d4373;
      }

      /* Enhanced Submit Button */
      .login-btn {
          width: 100%;
          padding: 1rem;
          background: var(--secondary-color);
          color: var(--primary-color);
          border: none;
          border-radius: 8px;
          font-weight: 600;
          cursor: pointer;
          transition: all 0.3s ease;
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 8px;
      }

      .login-btn:hover {
          background: #c5a030;
          letter-spacing: 1px;
      }

      @media (max-width: 576px) {
          .auth-container {
              margin: 80px 1rem 2rem;
              padding: 1.5rem;
          }
          
          .auth-container h2 {
              font-size: 1.75rem;
          }
      }
  </style>

  <% if (success) { %>
      <div class="alert alert-success">
          <%= success %>
      </div>
  <% } %>

  <% if (error) { %>
      <div class="alert alert-danger">
          <%= error %>
      </div>
  <% } %>

  <section class="auth-container">
      <h2>Welcome Back! ðŸ‘‹</h2>
      
      <form action="/auth/login" method="POST" class="auth-form">
          <div class="input-group">
              <i class="input-icon fas fa-envelope"></i>
              <input type="email" name="email" placeholder="Email" required>
          </div>
          
          <div class="input-group">
              <i class="input-icon fas fa-lock"></i>
              <input type="password" name="password" id="password" placeholder="Password" required>
              <i class="toggle-password fas fa-eye" onclick="togglePassword()"></i>
          </div>
          
          <button type="submit" class="login-btn">
              <i class="fas fa-sign-in-alt"></i>
              Sign In
          </button>
      </form>

      <div class="social-login">
          <a href="/auth/google" class="btn-google">
              <i class="fab fa-google"></i>
              Continue with Google
          </a>
          <a href="/auth/facebook" class="btn-facebook">
              <i class="fab fa-facebook-f"></i>
              Continue with Facebook
          </a>
      </div>

      <p>Don't have an account? <a href="/auth/register" class="highlight-link">Create Account</a></p>
      <% if (locals.returnTo) { %>
        <p>You were trying to access <a href="<%= locals.returnTo %>">this page</a>. Please log in to continue.</p>
      <% } %>
  </section>

  <script>
      function togglePassword() {
          const passwordField = document.getElementById('password');
          const eyeIcon = document.querySelector('.toggle-password');
          if (passwordField.type === 'password') {
              passwordField.type = 'text';
              eyeIcon.classList.replace('fa-eye', 'fa-eye-slash');
          } else {
              passwordField.type = 'password';
              eyeIcon.classList.replace('fa-eye-slash', 'fa-eye');
          }
      }

      // Add subtle animation on load
      document.addEventListener('DOMContentLoaded', () => {
          const authContainer = document.querySelector('.auth-container');
          authContainer.style.transform = 'translateY(20px)';
          authContainer.style.opacity = '0';
          
          setTimeout(() => {
              authContainer.style.transform = 'translateY(0)';
              authContainer.style.opacity = '1';
          }, 100);
      });
  </script>

  <%- include('partials/footer') %>
</body>